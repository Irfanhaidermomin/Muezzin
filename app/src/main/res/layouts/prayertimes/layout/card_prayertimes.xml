<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_prayerTimes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_extraSmall"
    card_view:cardElevation="@dimen/spacing_extraExtraSmall"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extraSmall"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prayerTimes_cardTitle_prayerTimes"
            android:textSize="@dimen/textSize_biggerMedium" />

        <View
            style="@style/Separator"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_extraSmall"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extraSmall"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/prayerTime_fajr"
                    android:textSize="@dimen/textSize_biggerMedium" />

                <TextView
                    android:id="@+id/textView_prayerTimes_fajrTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/textSize_biggerMedium" />
            </LinearLayout>

            <View
                style="@style/Separator"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_extraExtraLarge"
                android:layout_marginRight="@dimen/spacing_extraExtraLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extraSmall"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/prayerTime_dhuhr"
                    android:textSize="@dimen/textSize_biggerMedium" />

                <TextView
                    android:id="@+id/textView_prayerTimes_dhuhrTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/textSize_biggerMedium" />
            </LinearLayout>

            <View
                style="@style/Separator"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_extraExtraLarge"
                android:layout_marginRight="@dimen/spacing_extraExtraLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extraSmall"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/prayerTime_asr"
                    android:textSize="@dimen/textSize_biggerMedium" />

                <TextView
                    android:id="@+id/textView_prayerTimes_asrTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/textSize_biggerMedium" />
            </LinearLayout>

            <View
                style="@style/Separator"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_extraExtraLarge"
                android:layout_marginRight="@dimen/spacing_extraExtraLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extraSmall"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/prayerTime_maghrib"
                    android:textSize="@dimen/textSize_biggerMedium" />

                <TextView
                    android:id="@+id/textView_prayerTimes_maghribTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/textSize_biggerMedium" />
            </LinearLayout>

            <View
                style="@style/Separator"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_extraExtraLarge"
                android:layout_marginRight="@dimen/spacing_extraExtraLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extraSmall"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/prayerTime_isha"
                    android:textSize="@dimen/textSize_biggerMedium" />

                <TextView
                    android:id="@+id/textView_prayerTimes_ishaTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/textSize_biggerMedium" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extraSmall">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prayerTime_shuruq"
                        android:textSize="@dimen/textSize_small" />

                    <TextView
                        android:id="@+id/textView_prayerTimes_shuruqTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prayerTime_qibla"
                        android:textSize="@dimen/textSize_small" />

                    <TextView
                        android:id="@+id/textView_prayerTimes_qiblaTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_small" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
