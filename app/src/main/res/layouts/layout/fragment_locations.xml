<?xml version="1.0" encoding="utf-8"?>

<ru.vang.progressswitcher.ProgressWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progress="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressWidget_locations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    progress:emptyViewLayout="@layout/content_empty"
    progress:errorViewLayout="@layout/content_error"
    progress:progressViewLayout="@layout/content_loading">

    <com.mehmetakiftutuncu.indexedrecyclerview.IndexedRecyclerView xmlns:iRV="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerView_locations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing_extraSmall"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_extraSmall"
        iRV:indexScrollHandleColor="@color/indexedRecyclerView_handle"
        iRV:indexTextColor="@color/secondaryText"
        iRV:indexTextSize="@dimen/textSize_extraSmall"
        iRV:indexVerticalMargin="@dimen/spacing_small"
        iRV:previewBackgroundColor="@color/indexedRecyclerView_preview"
        iRV:previewBackgroundStrokeColor="@color/primary"
        iRV:previewBackgroundStrokeWidth="@dimen/spacing_extraSmall"
        iRV:previewTextColor="@color/inversePrimaryText"
        iRV:previewTextSize="@dimen/textSize_huge" />

</ru.vang.progressswitcher.ProgressWidget>
