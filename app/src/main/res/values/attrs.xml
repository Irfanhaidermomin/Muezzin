<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="IndexedRecyclerView">
        <attr name="indexBackgroundColor"       format="color" />
        <attr name="indexBackgroundStrokeColor" format="color" />
        <attr name="indexBackgroundStrokeWidth" format="dimension" />
        <attr name="indexScrollHandleColor"     format="color" />
        <attr name="indexTextColor"             format="color" />
        <attr name="indexTextSize"              format="dimension" />
        <attr name="indexLocation"              format="enum" >
            <enum name="right" value="0" />
            <enum name="left"  value="1" />
        </attr>
        <attr name="indexHorizontalMargin"  format="dimension" />
        <attr name="indexVerticalMargin"    format="dimension" />

        <attr name="previewBackgroundColor"       format="color" />
        <attr name="previewBackgroundStrokeColor" format="color" />
        <attr name="previewBackgroundStrokeWidth" format="dimension" />
        <attr name="previewTintColor"             format="color" />
        <attr name="previewTextColor"             format="color" />
        <attr name="previewTextSize"              format="dimension" />
        <attr name="previewStyle"                 format="enum" >
            <enum name="rectangle" value="0" />
            <enum name="circle"    value="1" />
        </attr>
    </declare-styleable>
</resources>