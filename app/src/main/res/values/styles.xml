<resources>

    <style name="Theme.Muezzin" parent="Theme.Muezzin.Base" />

    <style name="Theme.Muezzin.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primaryDark</item>
        <item name="colorControlHighlight">@color/primaryLight</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Theme.Muezzin.Toolbar</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Customized toolbar style -->
    <style name="Theme.Muezzin.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Theme.Muezzin.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/Theme.Muezzin.Toolbar.Subtitle</item>
    </style>

    <!-- Customized toolbar title style -->
    <style name="Theme.Muezzin.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/inversePrimaryText</item>
    </style>

    <!-- Customized toolbar subtitle style -->
    <style name="Theme.Muezzin.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/inversePrimaryText</item>
    </style>

    <style name="Theme.Muezzin.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?android:textColorPrimaryInverse</item>
        <item name="tabIndicatorHeight">@dimen/spacing_extraSmall</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/Theme.Muezzin.TabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="Theme.Muezzin.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Separator">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/separator</item>
    </style>

</resources>
