<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                card_view:cardElevation="@dimen/spacing_extraExtraSmall"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:gravity="center"
                        android:text="İzmir, İzmir, Turkey"
                        android:textAlignment="center"
                        android:textSize="@dimen/textSize_large" />

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="September 21\n2015"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Monday"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSize_medium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="Dhû al-Ḥijjah 7\n1436"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_medium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                card_view:cardElevation="@dimen/spacing_extraExtraSmall"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_extraSmall"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Remaining Time to Fajr:"
                        android:textAlignment="center"
                        android:textSize="@dimen/textSize_biggerMedium" />

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/spacing_extraSmall"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="06:12:38"
                        android:textAlignment="center"
                        android:textSize="@dimen/textSize_extraExtraLarge" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extraSmall"
                card_view:cardElevation="@dimen/spacing_extraExtraSmall"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_fajr"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="05:27"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spacing_extraLarge"
                        android:layout_marginRight="@dimen/spacing_extraLarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_shuruq"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="06:51"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spacing_extraLarge"
                        android:layout_marginRight="@dimen/spacing_extraLarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_dhuhr"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="13:12"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spacing_extraLarge"
                        android:layout_marginRight="@dimen/spacing_extraLarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_asr"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="16:37"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spacing_extraLarge"
                        android:layout_marginRight="@dimen/spacing_extraLarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_maghrib"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="19:21"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spacing_extraLarge"
                        android:layout_marginRight="@dimen/spacing_extraLarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:layout_marginBottom="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_isha"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="20:37"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>

                    <View
                        style="@style/Separator"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spacing_extraLarge"
                        android:layout_marginRight="@dimen/spacing_extraLarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="@string/prayerTime_qibla"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="11:29"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_biggerMedium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:src="@mipmap/ic_action_calendar" />
</RelativeLayout>
