<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_extraSmall">

    <TextView
        android:id="@+id/textView_listItem_country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/textSize_biggerMedium" />

    <TextView
        android:id="@+id/textView_listItem_country_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extraSmall"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/textSize_small" />
</LinearLayout>
