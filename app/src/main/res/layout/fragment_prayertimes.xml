<?xml version="1.0" encoding="utf-8"?>

<ru.vang.progressswitcher.ProgressWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progress="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressWidget_prayertimes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    progress:emptyViewLayout="@layout/content_empty"
    progress:errorViewLayout="@layout/content_error"
    progress:progressViewLayout="@layout/content_loading">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_extraSmall"
                    card_view:cardElevation="@dimen/spacing_extraExtraSmall"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_extraSmall"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_prayerTimes_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/textSize_medium" />

                        <TextView
                            android:id="@+id/textView_prayerTimes_weekday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/spacing_extraSmall"
                            android:layout_marginRight="@dimen/spacing_extraSmall"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSize_medium" />

                        <TextView
                            android:id="@+id/textView_prayerTimes_hijriDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:textAlignment="textStart"
                            android:textSize="@dimen/textSize_medium" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_extraSmall"
                    card_view:cardElevation="@dimen/spacing_extraExtraSmall"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_extraSmall"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_prayerTimes_remainingTimeInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSize_biggerMedium" />

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/spacing_extraSmall"/>

                        <TextView
                            android:id="@+id/textView_prayerTimes_remainingTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSize_extraExtraLarge" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_extraSmall"
                    card_view:cardElevation="@dimen/spacing_extraExtraSmall"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_fajr"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_fajrTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_extraLarge"
                            android:layout_marginRight="@dimen/spacing_extraLarge"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_extraSmall"
                            android:layout_marginBottom="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_shuruq"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_shuruqTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_extraLarge"
                            android:layout_marginRight="@dimen/spacing_extraLarge"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_extraSmall"
                            android:layout_marginBottom="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_dhuhr"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_dhuhrTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_extraLarge"
                            android:layout_marginRight="@dimen/spacing_extraLarge"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_extraSmall"
                            android:layout_marginBottom="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_asr"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_asrTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_extraLarge"
                            android:layout_marginRight="@dimen/spacing_extraLarge"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_extraSmall"
                            android:layout_marginBottom="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_maghrib"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_maghribTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_extraLarge"
                            android:layout_marginRight="@dimen/spacing_extraLarge"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_extraSmall"
                            android:layout_marginBottom="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_isha"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_ishaTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>

                        <View
                            style="@style/Separator"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/spacing_extraLarge"
                            android:layout_marginRight="@dimen/spacing_extraLarge"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_extraSmall"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/spacing_medium"
                                android:layout_marginEnd="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="@string/prayerTime_qibla"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSize_biggerMedium" />

                            <TextView
                                android:id="@+id/textView_prayerTimes_qiblaTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/spacing_medium"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/textSize_biggerMedium" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_pickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:src="@mipmap/ic_action_calendar" />
    </RelativeLayout>

</ru.vang.progressswitcher.ProgressWidget>
