<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_extraSmall"
    card_view:cardElevation="@dimen/spacing_extraExtraSmall"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_extraSmall"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_prayerTimes_remainingTimeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/prayerTimes_cardTitle_remainingTime"
            android:textSize="@dimen/textSize_biggerMedium" />

        <View
            style="@style/Separator"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_extraSmall"/>

        <TextView
            android:id="@+id/textView_prayerTimes_remainingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/textSize_extraExtraLarge" />
    </LinearLayout>
</android.support.v7.widget.CardView>
