<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_extraSmall"
    card_view:cardElevation="@dimen/spacing_extraExtraSmall"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small">

        <ImageButton
            android:id="@+id/imageButton_prayerTimes_dateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_switchcalendar"
            android:background="@color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/spacing_extraSmall"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textView_prayerTimes_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/imageButton_prayerTimes_dateInfo"
            android:layout_toStartOf="@id/imageButton_prayerTimes_dateInfo"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_biggerMedium" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
